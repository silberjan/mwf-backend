{
  "linterOptions": {
    "exclude": ["__tests__/teams.json", "*.json", "**/*.json"]
  },
  "rules": {
    "max-line-length": [true, 140],
    "no-inferrable-types": false,
    "class-name": true,
    "comment-format": [true, "check-space"],
    "indent": [true, "spaces", 2],
    "eofline": true,
    "no-duplicate-variable": true,
    "no-duplicate-imports": true,
    "no-require-imports": true,
    "no-eval": true,
    "no-arg": true,
    "no-internal-module": true,
    "no-trailing-whitespace": true,
    "no-bitwise": true,
    "no-shadowed-variable": true,
    "no-unused-expression": true,
    "no-var-keyword": true,
    "member-access": [true, "no-public"],
    "no-debugger": true,
    "no-unused-variable": true,
    "one-line": [true, "check-catch", "check-else", "check-open-brace", "check-whitespace"],
    "quotemark": [true, "single", "avoid-escape"],
    "semicolon": false,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "curly": true,
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-preblock"]
  }
}
